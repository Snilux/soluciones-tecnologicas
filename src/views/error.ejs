<%- include('partials/head.ejs') %>

<body
  class="min-h-screen bg-gradient-to-br from-blue-900 via-blue-800 to-purple-900 flex items-center justify-center p-5 relative overflow-hidden">
  <div>
    <!-- Background Elements -->
    <div class="absolute inset-0 pointer-events-none">
      <!-- Floating circles -->
      <div class="absolute top-20 left-10 w-20 h-20 bg-blue-500/10 rounded-full animate-float"></div>
      <div class="absolute top-40 right-20 w-16 h-16 bg-purple-500/10 rounded-full animate-float"
        style="animation-delay: -1s;"></div>
      <div class="absolute bottom-40 left-20 w-12 h-12 bg-blue-400/10 rounded-full animate-float"
        style="animation-delay: -2s;"></div>
      <div class="absolute bottom-20 right-10 w-24 h-24 bg-purple-400/10 rounded-full animate-float"
        style="animation-delay: -3s;"></div>

      <!-- Rotating ring -->
      <div
        class="absolute top-1/2 left-1/2 w-96 h-96 border border-white/5 rounded-full animate-rotate-slow transform -translate-x-1/2 -translate-y-1/2">
      </div>
    </div>

    <div
      class="bg-slate-800/95 backdrop-blur-lg rounded-2xl p-12 w-full max-w-lg shadow-2xl border border-white/10 animate-fade-in relative z-10">
      <!-- Header -->
      <div class="text-center mb-10">
        <!-- 404 Icon and Number -->
        <div class="relative mb-8">
          <!-- Large 404 Text -->
          <div
            class="text-8xl font-bold text-transparent bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text animate-pulse-soft select-none">
            404
          </div>

          <!-- Floating Search Icon -->
          <div
            class="absolute -top-6 -right-6 w-16 h-16 bg-gradient-to-br from-orange-500 to-red-600 rounded-full flex items-center justify-center shadow-lg shadow-orange-500/30 animate-float">
            <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
            </svg>
          </div>
        </div>

        <!-- Title -->
        <h1 class="text-white text-3xl font-bold mb-3 animate-slide-up">¡Oops! Página No Encontrada</h1>
        <p class="text-white/70 text-base leading-relaxed animate-slide-up" style="animation-delay: 0.1s;">
          La página que buscas parece haberse perdido en el ciberespacio
        </p>
      </div>

      <!-- Error Details -->
      <div
        class="bg-gradient-to-r from-orange-500/10 to-red-500/10 border border-orange-500/30 rounded-xl p-5 mb-8 animate-slide-up"
        style="animation-delay: 0.2s;">
        <div class="flex items-start">
          <svg class="w-6 h-6 text-orange-400 mr-3 mt-0.5 flex-shrink-0 animate-pulse-soft" viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M13,14H11V10H13M13,18H11V16H13M1,21H23L12,2L1,21Z" />
          </svg>
          <div class="flex-1">
            <h3 class="text-orange-300 font-semibold text-sm mb-3">Posibles razones:</h3>
            <ul class="text-orange-200/80 text-sm space-y-2">
              <li class="flex items-start">
                <span class="w-1.5 h-1.5 bg-orange-400 rounded-full mt-2.5 mr-3 flex-shrink-0"></span>
                <span>La URL fue escrita incorrectamente</span>
              </li>
              <li class="flex items-start">
                <span class="w-1.5 h-1.5 bg-orange-400 rounded-full mt-2.5 mr-3 flex-shrink-0"></span>
                <span>La página fue movida o eliminada</span>
              </li>
              <li class="flex items-start">
                <span class="w-1.5 h-1.5 bg-orange-400 rounded-full mt-2.5 mr-3 flex-shrink-0"></span>
                <span>El enlace está desactualizado</span>
              </li>
            </ul>
          </div>
        </div>
      </div>


      <!-- Action Buttons -->
      <div class="space-y-4 animate-slide-up" style="animation-delay: 0.4s;">
        <!-- Primary Actions -->
        <div class="grid grid-cols-2 gap-4">
          <a href="/"
            class="bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold py-4 px-4 rounded-xl transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/40 hover:-translate-y-1 active:translate-y-0 focus:outline-none focus:ring-3 focus:ring-blue-500/50 flex items-center justify-center gap-2">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" />
            </svg>
            <span>Inicio</span>
          </a>

          <button onclick="goBack()"
            class="bg-gradient-to-r from-purple-500 to-pink-600 text-white font-semibold py-4 px-4 rounded-xl transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/40 hover:-translate-y-1 active:translate-y-0 focus:outline-none focus:ring-3 focus:ring-purple-500/50 flex items-center justify-center gap-2">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" />
            </svg>
            <span>Volver</span>
          </button>
        </div>


        <a href="/contacto"
          class="bg-transparent border border-white/30 text-white/90 font-medium py-3 px-4 rounded-xl transition-all duration-300 hover:bg-white/10 hover:border-white/50 focus:outline-none focus:ring-3 focus:ring-white/20 flex items-center justify-center gap-2">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,17C11.45,17 11,16.55 11,16C11,15.45 11.45,15 12,15C12.55,15 13,15.45 13,16C13,16.55 12.55,17 12,17M12,6A4,4 0 0,1 16,10C16,12 14,11.5 14,15H10C10,12.5 12,12 12,10A2,2 0 0,0 10,8A2,2 0 0,0 8,10H6A4,4 0 0,1 12,6Z" />
          </svg>
          <span>Ayuda</span>
        </a>
      </div>
      <!-- Fun Element -->
      <div class="mt-8 text-center animate-slide-up" style="animation-delay: 0.5s;">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/5 rounded-full border border-white/10">
          <span class="text-2xl animate-float">🚀</span>
          <span class="text-white/60 text-sm">Error Code: 404 - Houston, tenemos un problema</span>
        </div>
      </div>
    </div>



    <!-- Footer -->
    <div class="mt-8 pt-6 border-t border-white/10 text-center animate-slide-up" style="animation-delay: 0.6s;">
      <p class="text-white/50 text-xs">
        © 2025 Soluciones Tecnológicas .NET. Todos los derechos reservados.
      </p>
    </div>
  </div>




  <script>

    function goBack() {
      window.history.back();
    }

    // Efecto de animación en botones
    document.querySelectorAll('button').forEach(button => {
      button.addEventListener('mousedown', function () {
        this.classList.add('animate-bounce-gentle');
      });

      button.addEventListener('mouseup', function () {
        setTimeout(() => {
          this.classList.remove('animate-bounce-gentle');
        }, 300);
      });
    });

    // Efecto parallax sutil en elementos flotantes
    document.addEventListener('mousemove', function (e) {
      const floatingElements = document.querySelectorAll('.animate-float');
      const x = e.clientX / window.innerWidth;
      const y = e.clientY / window.innerHeight;

      floatingElements.forEach((el, index) => {
        const speed = (index + 1) * 0.5;
        const xOffset = (x - 0.5) * speed;
        const yOffset = (y - 0.5) * speed;

        el.style.transform = `translate(${xOffset}px, ${yOffset}px)`;
      });
    });
  </script>
</body>

</html>