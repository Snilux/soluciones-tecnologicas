<%- include('../partials/head.ejs') %>

<body class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <!-- Navigation Bar -->

    <%- include('../partials/nav-administration.ejs') %>

    <!-- Main Content -->
    <div class="p-6">
        <!-- Users Panel -->
        <div id="users-panel" class="panel-content">
            <div class="max-w-6xl mx-auto">
                <!-- Header -->
                <div class="mb-8">
                    <div class="flex items-center gap-3 mb-2">
                        <div class="p-2 bg-blue-500/20 rounded-lg">
                            <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z">
                                </path>
                            </svg>
                        </div>
                        <h1 class="text-3xl font-bold text-white">Panel de Usuarios</h1>
                    </div>
                    <p class="text-gray-400">Lista de usuarios registrados en el sistema</p>
                </div>
                <!-- <div class="mb-6 flex justify-end">
                    <button
                        class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 transition-colors duration-200">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Nuevo Usuario
                    </button>
                </div> -->

                <!-- Users Table -->
                <div class="bg-gray-800 border border-gray-700 rounded-lg overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-700">
                                <tr>
                                    <th
                                        class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                        ID
                                    </th>
                                    <th
                                        class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                        Nombre
                                    </th>
                                    <th
                                        class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                        Acciones
                                    </th>

                                </tr>
                            </thead>
                            <tbody id="usersTableBody" class="divide-y divide-gray-700">
                                <% if (users) { %>
                                <% users.forEach(user => { %>
                                <tr class="hover:bg-gray-700/50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-white"><%= user.id %></div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-white"><%= user.username %></div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <div class="flex gap-2">
                                            <a href="/admin/users/<%= user.id %>"
                                                class="text-blue-400 hover:text-blue-300 hover:bg-blue-500/20 p-1 rounded transition-colors"
                                                title="Editar usuario">
                                                <svg class="h-6 w-6" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                                                    </path>
                                                </svg>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>


                                <%  } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Table Footer with Total Count -->

                <div class="mt-4 text-center">
                    <p class="text-gray-400 text-sm">
                        <% if (users) { %>
                        Total de usuarios: <span id="userCount"
                            class="text-white font-medium"><%= users.length %></span>
                        <%  } %>
                    </p>
                </div>
            </div>
        </div>


    </div>

    <script src="/js/panel-administration.js"></script>



</body>

</html>