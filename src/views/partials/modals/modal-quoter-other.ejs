<script>

    // Función para abrir el modal "Otro" simplificado
    function abrirModalOtroSimple() {
        // Mostrar el modal
        document.getElementById('modalOtro').classList.remove('hidden');
        document.getElementById('modalOtro').classList.add('flex');
    }

    // Función para cerrar el modal y restaurar selección
    function cerrarModalOtroSimple() {
        // Ocultar modal
        document.getElementById('modalOtro').classList.add('hidden');
        document.getElementById('modalOtro').classList.remove('flex');
    }

    // Función para ir a contacto desde el modal "Otro"
    function irAContactoDesdeOtro() {
        console.log('Redirigiendo a contacto desde modal "Otro"');

        // Mostrar mensaje de confirmación antes de redireccionar
        Swal.fire({
            title: '¡Perfecto!',
            text: 'Te dirigiremos a nuestro formulario de contacto para ayudarte con tu proyecto personalizado.',
            icon: 'success',
            confirmButtonText: 'Continuar',
            confirmButtonColor: '#3f80e8',
            showCancelButton: true,
            cancelButtonText: 'Cancelar',
            cancelButtonColor: '#6b7280'
        }).then((result) => {
            if (result.isConfirmed) {
                // Cerrar el modal primero
                cerrarModalOtroSimple();

                // Redireccionar después de un pequeño delay
                setTimeout(() => {
                    window.location.href = '/contacto';
                }, 300);
            }
        });
    }

    document.getElementById('modalOtro').addEventListener('click', function (e) {
        if (e.target === this) {
            cerrarModalOtroSimple();
        }
    });

    document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape' && !document.getElementById('modalOtro').classList.contains('hidden')) {
            cerrarModalOtroSimple();
        }
    });
</script>